<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- כותרת -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מעקב התקדמות"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- בחירת מתאמן -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר מתאמן"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerProgressTrainee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <!-- גרף התקדמות -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="גרף התקדמות"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- כאן בעתיד ייכנס LineChart -->
        <FrameLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="20dp"/>

        <!-- רשימת מדידות קודמות -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נתונים קודמים"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProgress"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <!-- כפתור הוספת מדידה -->
        <Button
            android:id="@+id/btnAddProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הוסף נתון התקדמות ➕"
            android:backgroundTint="#03A9F4"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
